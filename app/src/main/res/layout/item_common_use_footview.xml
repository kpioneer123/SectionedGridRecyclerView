<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_f3"
    >
    <LinearLayout
        android:id="@+id/ll_select"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@color/common_use_cancel_text_color"
            android:background="@drawable/selector_common_use_cancel"
            android:text="跳过"
            />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@color/common_use_ok_text_color"
            android:background="@drawable/selector_common_use_ok"
            android:text="选好了"/>
    </LinearLayout>


</RelativeLayout>
